<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Support Request <%= request.id %></title>
  <link rel="stylesheet" href="/styles.css" />
  <style>
    body{
      font-family:Inter,system-ui,Segoe UI,Roboto,Helvetica,Arial;
      display:flex;
      justify-content:center;
      background:#0b1120;
      color:#e2e8f0;
      min-height:100vh;
      margin:0;
      padding:32px 20px;
    }
    .card{
      background:rgba(15,23,42,0.9);
      padding:24px;
      border-radius:12px;
      border:1px solid rgba(71,85,105,0.4);
      width:min(960px, 100%);
      display:flex;
      flex-direction:column;
      gap:18px;
      box-shadow:0 20px 45px rgba(0,0,0,0.35);
    }
    h2{
      margin:0;
      font-size:1.3rem;
    }
    .back-link{
      align-self:flex-start;
      color:#a5b4fc;
      text-decoration:none;
      font-size:0.95rem;
    }
    .back-link:hover{
      color:#c7d2fe;
      text-decoration:underline;
    }
    .meta{
      display:flex;
      flex-wrap:wrap;
      gap:8px 18px;
      font-size:0.9rem;
      color:#cbd5f5;
    }
    .message{
      margin:0;
      color:#e2e8f0;
      line-height:1.6;
      white-space:pre-wrap;
    }
    .thread{
      display:flex;
      flex-direction:column;
      gap:14px;
      margin-top:8px;
    }
    .thread-item{
      border-radius:12px;
      padding:16px;
      border:1px solid rgba(51,65,85,0.6);
      background:rgba(15,23,42,0.7);
      display:flex;
      flex-direction:column;
      gap:8px;
    }
    .thread-header{
      display:flex;
      justify-content:space-between;
      align-items:center;
      font-size:0.85rem;
      color:#94a3b8;
      text-transform:uppercase;
      letter-spacing:0.08em;
    }
    .thread-header span{
      color:#e2e8f0;
      font-weight:600;
    }
    .thread-item.admin{
      border-color:rgba(148,163,184,0.6);
      background:rgba(30,41,59,0.7);
    }
    .reply-panel{
      display:flex;
      flex-direction:column;
      gap:12px;
      padding:16px;
      border-radius:12px;
      border:1px solid rgba(51,65,85,0.6);
      background:rgba(15,23,42,0.8);
    }
    .reply-panel textarea{
      background:#0f172a;
      color:#e2e8f0;
      border:1px solid rgba(100,116,139,0.6);
      border-radius:10px;
      padding:12px;
      min-height:120px;
      font-size:0.95rem;
      resize:vertical;
    }
    .reply-actions{
      display:flex;
      flex-wrap:wrap;
      gap:10px;
    }
    .reply-actions button{
      cursor:pointer;
      background:#6366f1;
      border:1px solid rgba(129,140,248,0.7);
      color:white;
      padding:10px 16px;
      border-radius:999px;
      font-weight:600;
      font-size:0.9rem;
    }
    .reply-actions button.secondary{
      background:#0f172a;
      color:#e2e8f0;
    }
    .pill{
      padding:4px 10px;
      border-radius:999px;
      background:rgba(99,102,241,0.25);
      border:1px solid rgba(129,140,248,0.5);
      color:#e0e7ff;
      font-size:0.82rem;
    }
  </style>
</head>
<body>
  <div class="card">
    <h2>Support Request <%= request.id %></h2>
    <a class="back-link" href="/support">&lt;-- Back</a>
    <div class="meta">
      <span class="pill">Category: <%= request.category %></span>
      <span class="pill">Status: <%= request.status || "Awaiting Support Reply" %></span>
      <span>Submitted: <%= request.created_at %></span>
      <% if (request.email) { %>
        <span>Account: <%= request.email %></span>
      <% } %>
    </div>
    <div class="thread">
      <% const threadItems = []; %>
      <% threadItems.push({ role: "user", message: request.message, created_at: request.created_at }); %>
      <% if (Array.isArray(request.replies)) { %>
        <% request.replies.forEach((reply) => { threadItems.push(reply); }); %>
      <% } %>
      <% threadItems.forEach((entry) => { %>
        <% const roleLabel = (entry.role || "user").toLowerCase(); %>
        <div class="thread-item <%= roleLabel === "admin" ? "admin" : "user" %>">
          <div class="thread-header">
            <span><%= roleLabel === "admin" ? "Support Reply" : "User Reply" %></span>
            <% if (entry.created_at) { %>
              <div><%= entry.created_at %></div>
            <% } %>
          </div>
          <p class="message"><%= entry.message %></p>
        </div>
      <% }) %>
    </div>
    <div class="reply-panel">
      <label for="supportReply">Send a reply</label>
      <textarea id="supportReply" placeholder="Type your reply here..."></textarea>
      <div id="replyStatus" class="meta" role="status" aria-live="polite"></div>
      <div class="reply-actions">
        <button type="button" id="sendUserReply">Send User Reply</button>
        <% if (allowAdminReply) { %>
          <button type="button" id="sendAdminReply" class="secondary">Send Admin Reply</button>
        <% } %>
      </div>
    </div>
  </div>
  <script>
    const requestId = "<%= request.id %>";
    const replyInput = document.getElementById("supportReply");
    const replyStatus = document.getElementById("replyStatus");
    const userButton = document.getElementById("sendUserReply");
    const adminButton = document.getElementById("sendAdminReply");

    const setStatus = (message, isError = false) => {
      replyStatus.textContent = message;
      replyStatus.style.color = isError ? "#fca5a5" : "#cbd5f5";
    };

    const setButtonsDisabled = (disabled) => {
      userButton.disabled = disabled;
      if (adminButton) {
        adminButton.disabled = disabled;
      }
    };

    const sendReply = async (role) => {
      const message = replyInput.value.trim();
      if (!message) {
        setStatus("Please enter a reply message before sending.", true);
        return;
      }
      setStatus("Sending reply...");
      setButtonsDisabled(true);
      try {
        const response = await fetch(`/api/support/requests/${requestId}/replies`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ message, role }),
        });
        const payload = await response.json();
        if (!response.ok) {
          throw new Error(payload?.error || "Unable to send reply.");
        }
        setStatus("Reply sent. Refreshing thread...");
        replyInput.value = "";
        window.location.reload();
      } catch (error) {
        setStatus(error.message || "Unable to send reply.", true);
      } finally {
        setButtonsDisabled(false);
      }
    };

    userButton.addEventListener("click", () => sendReply("user"));
    if (adminButton) {
      adminButton.addEventListener("click", () => sendReply("admin"));
    }
  </script>
</body>
</html>
