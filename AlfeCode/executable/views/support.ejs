    const setSupportStatus = (text, { isError = false } = {}) => {
      if (!supportStatus) return;
      supportStatus.textContent = text;
      supportStatus.classList.toggle('error', isError);
    };

    const setSupportButtonState = (isDisabled) => {
      if (!supportButton) return;
      supportButton.disabled = isDisabled;
      supportButton.textContent = isDisabled ? 'Sending...' : 'Send to Support';
    };

    const formatSupportDate = (value) => {
      if (!value) return '';
      const date = new Date(value);
      if (Number.isNaN(date.getTime())) return value;
      return date.toLocaleString();
    };

    const decodeHtmlEntities = (value) => {
      if (value == null) return '';
      const textarea = document.createElement('textarea');
      textarea.innerHTML = String(value);
      return textarea.value;
    };

    const renderSupportRequests = (requests, emptyText) => {
      if (!supportRequestsList) return;
      supportRequestsList.innerHTML = '';
      if (!requests.length) {
        const empty = document.createElement('div');
        empty.className = 'support-request-empty';
        empty.textContent = emptyText || 'No support requests yet. Send one above and it will appear here.';
        supportRequestsList.appendChild(empty);
        return;
      }

      requests.forEach((request) => {
        const row = document.createElement('a');
        row.className = 'support-request-row';
        row.href = `/support/requests/${request.id}`;

        const meta = document.createElement('div');
        meta.className = 'support-request-meta';
        const statusLabel = request.status || 'Awaiting Support Reply';
        const metaItems = [
          { label: 'Category', value: decodeHtmlEntities(request.category) },
          { label: 'Status', value: decodeHtmlEntities(statusLabel) },
          { label: 'Submitted', value: formatSupportDate(request.created_at) },
          { label: 'ID', value: request.id },
        ];
        metaItems.forEach(({ label, value }) => {
          const span = document.createElement('span');
          span.textContent = `${label}: ${value}`;
          meta.appendChild(span);
        });

        const message = document.createElement('p');
        message.className = 'support-request-message';
        message.textContent = decodeHtmlEntities(request.message);

        row.appendChild(meta);
        row.appendChild(message);
        supportRequestsList.appendChild(row);
      });
    };

    const loadSupportRequests = async () => {
      if (!supportRequestsList) return;
      try {
        const response = await fetch('/api/support');
        const payload = await response.json().catch(() => ({}));
        if (!response.ok) {
          renderSupportRequests([], payload?.error || 'Unable to load support requests.');
          return;
        }
        renderSupportRequests(Array.isArray(payload?.requests) ? payload.requests : []);
      } catch (error) {
        renderSupportRequests([], 'Unable to load support requests.');
      }
    };

    if (supportButton) {
      supportButton.addEventListener('click', async () => {
        const category = supportCategory?.value || '';
        const message = supportMessage?.value?.trim() || '';

        if (!category) {
          setSupportStatus('Please select a support category.', { isError: true });
          return;
        }
        if (!message) {
          setSupportStatus('Please enter a support message.', { isError: true });
          return;
        }

        setSupportStatus('');
        setSupportButtonState(true);

        try {
          const response = await fetch('/api/support', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ category, message })
          });
          const payload = await response.json().catch(() => ({}));
          if (!response.ok) {
            setSupportStatus(payload?.error || 'Unable to send support request.', { isError: true });
            return;
          }
          supportMessage.value = '';
          supportCategory.value = '';
          setSupportStatus('Your support request has been sent.');
          await loadSupportRequests();
        } catch (error) {
          setSupportStatus('Unable to send support request. Please try again.', { isError: true });
        } finally {
          setSupportButtonState(false);
        }
      });
    }

    loadSupportRequests();
  </script>
