<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Repositories</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>All Repositories</h1>

    <ul>
        <% repos.forEach(function(repo) { %>
            <li>
                <a href="/<%= repo.name %>"><%= repo.name %></a> -
                <a href="<%= repo.githubURL %>" target="_blank">GitHub</a>
            </li>
        <% }); %>
    </ul>

    <!-- Add new repository button -->
    <p>
        <a href="/repositories/add">Add New Repository</a>
    </p>

    <!-- Link back to Home and Global Instructions -->
    <footer>
        <a href="/">Home</a> |
        <a href="/global_instructions">Global Agent Instructions</a>
    </footer>
</body>
</html>
