<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add New Chat - <%= gitRepoNameCLI %></title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            background-color: #f5f5f5;
            padding: 40px;
        }
        h1 {
            font-weight: 500;
        }
        label {
            display: block;
            margin-top: 15px;
            font-weight: 500;
        }
        input[type="text"], textarea, select {
            width: 100%;
            padding: 10px;
            font-family: 'Roboto', sans-serif;
            font-size: 1em;
            border: 1px solid #ccc;
            border-radius: 4px;
            resize: vertical;
        }
        textarea {
            min-height: 100px;
        }
        .form-buttons {
            margin-top: 20px;
        }
        .form-buttons button {
            background-color: #3498db;
            color: #fff;
            border: none;
            padding: 12px 20px;
            font-size: 1em;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 10px;
        }
        .form-buttons button:hover {
            background-color: #2980b9;
        }
        a {
            color: #3498db;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
<h1>Add New Chat for Repository: <%= gitRepoNameCLI %></h1>

<form action="/<%= gitRepoNameCLI %>/add_chat" method="POST">
    <label for="aiModel">Select AI Model:</label>
    <select id="aiModel" name="aiModel">
        <% aiModels.forEach(function(model) { %>
            <option value="<%= model %>"><%= model %></option>
        <% }); %>
    </select>

    <label for="initialPrompt">Initial Prompt:</label>
    <textarea id="initialPrompt" name="initialPrompt" placeholder="Enter your question or instructions for the AI"></textarea>

    <div class="form-buttons">
        <button type="submit">Create Chat</button>
        <button type="button" onclick="window.location.href='/<%= gitRepoNameCLI %>/chats'">Cancel</button>
    </div>
</form>

<!-- Link back to Chats List -->
<p><a href="/<%= gitRepoNameCLI %>/chats">Back to Chats List</a></p>
</body>
</html>
