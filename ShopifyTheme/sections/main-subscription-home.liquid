<section class="content-card">
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.copy }}</p>
  <a class="btn btn--primary" href="{{ section.settings.cta_link }}">{{ section.settings.cta_text }}</a>
</section>

{% schema %}
{
  "name": "Subscription home",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Alfe AI Subscription" },
    { "type": "textarea", "id": "copy", "label": "Copy", "default": "Unlimited use of Qwen 3 14B on Alfe AI Code platform with cloud IDE, Git management, and AI chat access." },
    { "type": "text", "id": "cta_text", "label": "CTA text", "default": "View subscription" },
    { "type": "url", "id": "cta_link", "label": "CTA link" }
  ],
  "presets": [
    { "name": "Subscription home" }
  ]
}
{% endschema %}
